<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor de los botones -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botones de los libros -->
        <Button
            android:id="@+id/buttonLiberAlVelLegis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_liber_al_vel_legis"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:background="@drawable/boton_thelema"
            android:textColor="@color/thelema_dorado"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/buttonLiberII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_liber_ii"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:background="@drawable/boton_thelema"
            android:textColor="@color/thelema_dorado"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/buttonLiberTzaddi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_liber_tzaddi"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:background="@drawable/boton_thelema"
            android:textColor="@color/thelema_dorado"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/buttonOraciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_oraciones"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:background="@drawable/boton_thelema"
            android:textColor="@color/thelema_dorado"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/buttonPreguntas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_preguntas"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:background="@drawable/boton_thelema"
            android:textColor="@color/thelema_dorado"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/buttonThemes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_themes"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:background="@drawable/boton_thelema"
            android:textColor="@color/thelema_dorado"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>

    <!-- ScrollView para el contenido -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttonsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Contenido del ScrollView -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:padding="16dp"/>
    </ScrollView>

    <!-- Contenedor general para los capítulos -->
    <LinearLayout
        android:id="@+id/chaptersContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <!-- Contenedores de capítulos específicos para cada libro -->
    <LinearLayout
        android:id="@+id/chaptersLiberAlVelLegis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/chaptersContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/chaptersLiberII"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/chaptersLiberAlVelLegis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/chaptersLiberTzaddi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/chaptersLiberII"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <!-- Contenedor para versículos -->
    <LinearLayout
        android:id="@+id/versesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/chaptersLiberTzaddi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>


