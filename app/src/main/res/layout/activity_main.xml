<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonLiberAlVelLegis"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/boton_thelema"
            android:contentDescription="@string/button_liber_al_vel_legis"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:padding="12dp"
            android:text="@string/button_liber_al_vel_legis"
            android:textColor="@color/thelema_dorado" />

        <Button
            android:id="@+id/buttonLiberII"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/boton_thelema"
            android:contentDescription="@string/button_liber_ii"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:padding="12dp"
            android:text="@string/button_liber_ii"
            android:textColor="@color/thelema_dorado" />

        <Button
            android:id="@+id/buttonLiberTzaddi"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/boton_thelema"
            android:contentDescription="@string/button_liber_tzaddi"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:padding="12dp"
            android:text="@string/button_liber_tzaddi"
            android:textColor="@color/thelema_dorado" />

        <Button
            android:id="@+id/buttonOraciones"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/boton_thelema"
            android:contentDescription="@string/button_oraciones"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:padding="12dp"
            android:text="@string/button_oraciones"
            android:textColor="@color/thelema_dorado" />

        <Button
            android:id="@+id/buttonPreguntas"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/boton_thelema"
            android:contentDescription="@string/button_preguntas"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:padding="12dp"
            android:text="@string/button_preguntas"
            android:textColor="@color/thelema_dorado" />

        <Button
            android:id="@+id/buttonThemes"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/boton_thelema"
            android:contentDescription="@string/button_themes"
            android:minWidth="120dp"
            android:maxWidth="180dp"
            android:padding="12dp"
            android:text="@string/button_themes"
            android:textColor="@color/thelema_dorado" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chapterTitleLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/atras"
            android:visibility="gone"
            style="?android:attr/buttonBarButtonStyle" />

        <TextView
            android:id="@+id/chapterTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chapter_title"
            android:textAlignment="center"
            android:textSize="20sp"
            android:visibility="gone" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/chaptersScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chapterTitleLayout"
        app:layout_constraintBottom_toTopOf="@id/versesScrollView">

        <LinearLayout
            android:id="@+id/chaptersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <ScrollView
        android:id="@+id/versesScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chaptersScrollView"
        app:layout_constraintBottom_toTopOf="@id/verseTextView">

        <LinearLayout
            android:id="@+id/versesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <TextView
        android:id="@+id/verseTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/verse_text"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>