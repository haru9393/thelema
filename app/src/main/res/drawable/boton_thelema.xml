<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/thelema_dorado"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="@color/thelema_escarlata"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/thelema_morado"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="@color/thelema_dorado"/>
        </shape>
    </item>
</selector>
